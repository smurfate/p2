<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/p_grey_click"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/product_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp" >

       
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         
         
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:id="@+id/info_cotr" >

          
				<RelativeLayout android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    
				    android:weightSum="100">
				       <ImageButton
			            android:id="@+id/download_link"
			            android:layout_width="wrap_content"
			            
			            android:layout_height="wrap_content"
			            
			            android:layout_alignParentRight="true"
			            android:background="@drawable/mobayle_dl_free"
			            
			             />
				    <TextView
                        android:id="@+id/tv_song_title"
                        android:textSize="16sp"
                        android:layout_width="match_parent"
                        android:layout_toLeftOf="@id/download_link"
                        android:layout_height="wrap_content"
                        android:text="sdfsdfsdfsdfsadgdsfg"
                        android:singleLine="true"
                        android:layout_centerVertical="true"
                        android:gravity="left"
                        android:layout_alignParentLeft="true"
                        android:textColor="@android:color/black" />
				 
				</RelativeLayout>
                    
					<LinearLayout android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:layout_marginTop="4dp"
					    android:orientation="horizontal">
					    
	                    <TextView
	                        android:id="@+id/tv_song_size"
	                        
	                        android:layout_width="0dp"
	                        android:layout_weight="1"
	                        android:textSize="12sp"
	                        android:layout_height="wrap_content"
	                        android:text="6.68Mb"
	                        android:textColor="@color/developer_text" />
	                    
	                    <TextView
	                        android:id="@+id/tv_song_bitrate"
	                        
	                        android:layout_width="0dp"
	                        android:layout_weight="1"
	                        android:layout_height="wrap_content"
	                        android:text="256"
	                        android:textSize="12sp"
	                        android:gravity="center_horizontal"
	                        android:textColor="@color/developer_text" />
	                  
	                    <TextView
	                        android:id="@+id/tv_song_duration"
	                       
	                        android:layout_width="0dp"
	                        android:layout_weight="1"
	                        android:layout_height="wrap_content"
	                        android:text="mm:ss"
	                        android:gravity="right"
	                        android:textSize="12sp"
	                        android:textColor="@color/developer_text" />
                    </LinearLayout>
                
        </LinearLayout>

             
        


        
        
 
    </RelativeLayout>

</LinearLayout>