<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/p_grey_click"
    android:descendantFocusability="blocksDescendants" xmlns:tools="http://schemas.android.com/tools" tools:context="com.actionbarsherlock.app.SherlockExpandableListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/product_item_bg"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/pl_cover"
            android:layout_width="@dimen/prod_icon_diem_listitem"
            android:layout_height="@dimen/prod_icon_diem_listitem"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/grid_default_cover_playlist" />
 <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/popup_menu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/img_btn_bg"
            android:src="@drawable/player_options_ic_disable"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         
            android:layout_toRightOf="@id/pl_cover"
             android:layout_toLeftOf="@id/popup_menu"
            android:orientation="vertical"
            android:paddingLeft="6dp"
            android:id="@+id/info_cotr" >

          
				<RelativeLayout android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    
					    
					    android:layout_marginTop="5dp"
					    android:weightSum="100">
					    
					    <TextView
                        android:id="@+id/tv_pl_title"
                        android:textSize="16dp"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content"
                        android:text="sdfsdfsdfsdfsadgdsfg"
                        android:gravity="left"
                        
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:layout_marginTop="2dp"
                        android:textColor="@android:color/black" />
	                   
                    </RelativeLayout>
                    
					<LinearLayout android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:orientation="horizontal"
					    android:layout_marginTop="5dp"
					    android:paddingRight="6dp"
					    android:weightSum="100">
					    <TextView
	                        
	                         android:id="@+id/tv_track_count"
	                        android:layout_width="0dp"
	                        android:layout_weight="80"
	                        android:layout_height="wrap_content"
	                        android:text="9 Tracks"
	                        
	                        android:textColor="@color/developer_text" />
	                 
                    </LinearLayout>
                    
                   
                   
                    
                
                    
        </LinearLayout>

             
        


        
        
 
    </RelativeLayout>

</LinearLayout>