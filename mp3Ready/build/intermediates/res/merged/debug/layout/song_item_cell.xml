<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    

        <LinearLayout
            android:layout_width="@dimen/prod_icon_diem"
            android:layout_height="wrap_content"
            android:background="@drawable/p_white_click"
            android:orientation="vertical" >

           
	<RelativeLayout android:layout_width="@dimen/prod_icon_diem"
                android:layout_height="@dimen/prod_icon_diem"
	    android:layout_gravity="center_horizontal">
	    
            <ImageView
                android:id="@+id/song_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                
                
                android:adjustViewBounds="true"
                android:src="@drawable/default_song_cover"
                android:scaleType="fitXY" />
            <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:background="#80000000"
	        android:padding="5dp"
	        android:id="@+id/song_duration"
	        android:textSize="12sp"
	        android:textColor="@color/white"
	        android:text="3:44"/>
            <TextView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:background="#80000000"
	        android:padding="5dp"
	        android:id="@+id/song_listners"
	        android:textSize="12sp"
	        android:textColor="@color/white"
	        android:text="24,34534"/>
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom"
                android:layout_alignParentBottom="true"
                android:background="#80000000">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                
                android:id="@+id/song_actions"
                android:padding="1dp"
                android:weightSum="99">
                <ImageView android:layout_width="0dp"
                    android:layout_weight="33"
                    android:layout_height="30dp"
                    android:id="@+id/action_dislike"
                    android:adjustViewBounds="true"
                    android:padding="2dp"
                    android:src="@drawable/unlove_circle_onboarding"
                    android:scaleType="fitCenter"/>
                <ImageView android:layout_width="0dp"
                    android:layout_weight="33"
                    android:layout_height="30dp"
                    android:id="@+id/action_play"
                    android:adjustViewBounds="true"
                    
                    android:src="@drawable/card_ic_play"
                    android:scaleType="fitCenter"/>
                <ImageView android:layout_width="0dp"
                    android:layout_weight="33"
                    android:layout_height="30dp"
                    android:id="@+id/action_like"
                    android:padding="2dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/love_circle_onboarding"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <SeekBar
	            android:id="@+id/similarity_seekbar"
	            style="@style/SeenRate_SeekBar"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	             android:layout_gravity="bottom"
	             android:enabled="false"
	             android:visibility="gone"
	            android:progress="0"
	            android:focusable="false"
	            android:max="100" />
            </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical" >

                  <TextView
                        android:id="@+id/song_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       
                        android:lines="2"
                        android:maxLines="2"
                        android:requiresFadingEdge="horizontal"
                        android:singleLine="true"
                        android:text="Somewhaere Only We Know"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/prod_name_cell_font" />
                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:maxLines="1"
                    android:requiresFadingEdge="horizontal"
                    android:singleLine="true"
                    android:text="Keane"
                    android:textColor="@color/developer_text"
                    android:textSize="13sp"
                    
                    android:visibility="visible" />
                

               
            </LinearLayout>
        </LinearLayout>
    

</LinearLayout>