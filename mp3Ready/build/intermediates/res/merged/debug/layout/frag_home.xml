<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scroll_view"
    
    android:background="@color/light_gray"
    android:scrollbars="none">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="150dp"
            android:id="@+id/recommend_container_parent">
	        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:id="@+id/recommend_container"
	        >
	        	 
	    	</LinearLayout>
	    	<ProgressBar android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/pb_recommend_loading"
	    android:visibility="visible"
	    
	    android:layout_centerInParent="true"
    />
    </RelativeLayout>
	       
          <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:id="@+id/sections_container_parent">
	       <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:id="@+id/sections_container">
	          
	 	   </LinearLayout>
        
	    	<ProgressBar android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/pb_topgenre_loading"
	    android:visibility="visible"
	    
	    android:layout_centerInParent="true"
    />
    </RelativeLayout>
    </LinearLayout>
	
</ScrollView>

</RelativeLayout>